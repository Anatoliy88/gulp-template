//
// Tab - Pure CSS (no JavaScript)
// ===================================================

.tab
  position relative
  text-align center
  height 300px

.tab-painel
  display inline-block

  .tab-open
    position absolute
    width 1px
    height 1px
    margin -1px
    padding 0
    overflow hidden
    clip rect(0, 0, 0, 0)
    border 0

// Tab - Nav
// --------------------------------------------------

.tab-nav
  cursor pointer
  font-size 1.4rem
  display inline-block
  padding 10px 60px

@media (max-width 600px)
  .tab-nav
    padding 10px

.tab-open
.tab-nav:hover,
.tab-open:checked ~ .tab-nav
  background-color #F7CB34


// Tab - Container
// --------------------------------------------------

.tab-inner
  opacity 0
  position absolute
  left 0
  transition opacity .1s
  visibility hidden
  width 100%

.tab-open:focus:checked ~ .tab-nav
  outline thin dotted


.tab-open:checked ~ .tab-inner
  opacity 100
  visibility visible
  transition opacity 0.6 ease
